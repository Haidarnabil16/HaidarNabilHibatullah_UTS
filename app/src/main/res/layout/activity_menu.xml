<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/logo_himti"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_himti"/>

    <TextView
        android:id="@+id/data.pribadi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Pribadi"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo_himti"
        android:fontFamily="@font/montserrat"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/tv_nama_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/data.pribadi"
        android:fontFamily="@font/montserrat"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/tv_email_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_nama_menu"
        android:fontFamily="@font/montserrat"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/tv_pass_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_email_menu"
        android:fontFamily="@font/montserrat"
        android:textSize="25dp"/>

</RelativeLayout>